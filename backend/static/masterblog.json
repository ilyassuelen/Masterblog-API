{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:5002" }],
  "tags": [
    {
      "name": "Post",
      "description": "Endpoints for managing blog posts (CRUD + Search + Sort)"
    }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Get all blog posts",
        "tags": ["Post"],
        "responses": {
          "200": {
            "description": "Returns a list of all posts"
          }
        }
      },
      "post": {
        "summary": "Add a new blog post",
        "tags": ["Post"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Post successfully created" },
          "400": { "description": "Missing title or content" }
        }
      }
    },
    "/api/posts/{id}": {
      "put": {
        "summary": "Update an existing post by ID",
        "tags": ["Post"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer" }
        ],
        "responses": {
          "200": { "description": "Post updated successfully" },
          "404": { "description": "Post not found" }
        }
      },
      "delete": {
        "summary": "Delete a post by ID",
        "tags": ["Post"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "integer" }
        ],
        "responses": {
          "200": { "description": "Post deleted successfully" },
          "404": { "description": "Post not found" }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Search posts by title or content",
        "tags": ["Post"],
        "parameters": [
          { "name": "title", "in": "query", "type": "string" },
          { "name": "content", "in": "query", "type": "string" }
        ],
        "responses": {
          "200": { "description": "Matching posts returned" }
        }
      }
    }
  }
}